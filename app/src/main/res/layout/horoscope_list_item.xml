<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_green" >

    <ImageView
        android:id="@+id/sign_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sign_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/sign_image"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/title_range_space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/sign_image" />

    <ImageView
        android:id="@+id/calendar_range_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@+id/title_range_space"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_calendar_today_24"
        android:layout_marginEnd="5dp" />

    <TextView
        android:id="@+id/sign_range_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/calendar_range_image"
        app:layout_constraintTop_toBottomOf="@+id/title_range_space" />

    <Space
        android:id="@+id/range_compatibility_space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/calendar_range_image" />

    <TextView
        android:id="@+id/compatibility_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/range_compatibility_space"
        android:textColor="@color/white"
        android:text="Compatibility: "/>

    <TextView
        android:id="@+id/compatible_with_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/range_compatibility_space"
        app:layout_constraintStart_toEndOf="@id/compatibility_text" />

    <Space
        android:id="@+id/compatibility_color_space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/compatibility_text" />

    <TextView
        android:id="@+id/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compatibility_color_space"
        android:textColor="@color/white"
        android:text="Color: "/>

    <TextView
        android:id="@+id/sign_color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/compatibility_color_space"
        app:layout_constraintStart_toEndOf="@id/color_text" />

    <Space
        android:id="@+id/color_description_space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/color_text" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/color_description_space"
        android:textColor="@color/white"
        android:breakStrategy="balanced" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/description" />




</androidx.constraintlayout.widget.ConstraintLayout>